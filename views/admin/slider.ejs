<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Project</title>
    <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/admin/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>

    <!--Header-->
    <%- include('../../partials/admin/header.ejs')%>


    <!--Mid Data-->
    <section  id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/menu.ejs')%>
            <div class="col-md-9">
                <h4 style="text-align: center;">Slider Management</h4>
                <table class="table table-hover">
                    <th>Total Slider : <%=Slidersss%></th>
                    <th>Show Slider :  <%=showslider%></th>
                    <th>Unshow Slider :  <%=unshowslider%></th>
                </table>
                <a href="/admin/slideradd"><button class="btn btn-success form-control ">Add Slider</button></a>
                <table class="table table-hover">
                    <tr>
                        <th>S.No</th>
                        <th>Slider Image</th>
                        <th>Slider Title</th>
                        <th>Slider Description</th>
                        <th>Slider Status</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                    
                    <% record.forEach((result,key)=>{%>
                        <tr>
                            <td><%= key+1%></td>
                            <td><img src="/upload/<%= result.img%>" alt="" width="100" height="100"></td>
                            <td><%= result.title%></td>
                            <td><%= result.ldes%></td>
                            <%if(result.status=='show'){%>
                                  <td><a href="/admin/sliderstatus/<%=result.id%>"><i class="bi bi-eye-fill"></i></a></td>
                            <%}else{%>
                                <td><a href="/admin/sliderstatus/<%=result.id%>"><i class="bi bi-eye-slash-fill"></i></a></td>
                            <%}%>
                            <td><a href="/admin/sliderupd/<%=result.id%>"><i class="bi bi-pencil-square"></i></a></td>
                            <td><a href="/admin/sliderdel/<%=result.id%>"><i class="bi bi-trash3"></i></a></td>
                          </tr>
                   <%})%>
                      
                </table>
            </div>
            
            </div>
        </div>
    </section>
     

    <!--Footer-->
    <%- include("../../partials/admin/footer.ejs")%>
<body> 
</html>