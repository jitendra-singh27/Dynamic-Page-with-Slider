<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Project</title>
    <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/admin/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>

    <!--Header-->
    <%- include('../../partials/admin/header.ejs')%>
    <section  id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/menu.ejs')%>
            <div class="col-md-9">
                <h2>Query Management</h2>
                <table class="table table-hover">
                    <tr>
                        <th>S.No.</th>
                        <th>Email</th>
                        <th>Customer Query</th>
                        <th>Reply</th>
                        <th>Delete</th>
                    </tr>

                    <%record.forEach((result,key)=>{%>
                    <tr>  
                        <td><%=key+1%></td>
                        <td><%=result.email%></td>
                        <td><%=result.query%></td>
                        <td><a href="/admin/replyquery/<%=result.id%>"><button type="submit"><%=result.status%></button></a></td>
                        <td><a href="/admin/delerec/<%=result.id%>"><button type="submit">Delete</button></a></td>
                        
                    
                    </tr>
                    <%})%>
                </table>
            </div>
            </div>
        </div>
    </section>
   
    <%- include("../../partials/admin/footer.ejs")%>
<body> 
</html>